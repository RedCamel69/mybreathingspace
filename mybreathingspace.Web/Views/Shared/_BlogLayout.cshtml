<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="msvalidate.01" content="C2DDE04EB50E56B05DEF26F3826F1E7C" />
    <meta name="google-site-verification" content="Qymd92Lh3NLWIae5XAud21teexu2XU5jMAX2goBw72I" />
    <meta name="description" content="Description of Mindfulness practice and training in Fovant on the Wiltshire / Dorset border." />
    <meta name="keywords" content="mindfulness , fovant, mybreathingspace, fovant village hall, mindfulness training, mindulness practice" />
    <meta http-equiv="content-language" content="en-gb">
    <title>MyBreathingSpace.net</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/pluginblog")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body style="background-image:url('../../Content/images/jetty.jpg'); background-repeat:no-repeat;background-size:inherit;min-height:100vh;min-width:100vw;    background-color: lightgrey;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyBreathingSpace", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
        </ul>
        <form class="navbar-form navbar-left" role="search" action="@Url.Action("Search","Blog")" method="GET" >
            <div class="form-group">
                <input name="searchText" class="form-control" type="text" placeholder="Search" />
            </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Blog Admin", "Index", "Post", new {Area = "BlogAdmin"}, null)</li>
        </ul>
    </div>
            
        </div>
    </div>
    
    <div class="container body-content"  >
        @RenderBody()
        

